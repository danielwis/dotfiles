function set_colours
    set fish_color_command green # commands that exist
    set fish_color_valid_path --underline dddddd # parameters that are valid paths
    set fish_color_param dddddd # regular parameters etc.
    set fish_color_comment white # comments
    set fish_color_redirection 99bbdd # redirection (but not pipes)
    set fish_color_end yellow # command separators (& and ;)
end
